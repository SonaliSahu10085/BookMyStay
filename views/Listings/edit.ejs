<%- layout('/layouts/boilerplate') -%>
  <body>
    <div class="row">
      <!-- offset to make form center -->
      <div class="col-8 offset-2 my-4">
        <h3>Edit Listing</h3>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
          <div class="mb-4">
            <label for="" class="form-label">Title</label>
            <input
              type="text"
              name="title"
              value="<%= listing.title %>"
              class="form-control custom-greenish-bg"
            />
          </div>
          <div class="mb-4">
            <label for="image">Image</label>
            <input
              type="text"
              name="image"
              value="<%= listing.image %>" 
              class="form-control custom-greenish-bg"
            />
          </div>
          <div class="mb-4">
            <label for="description">Description</label>
            <textarea
              name="description"
              placeholder="Enter Description"
              class="form-control custom-greenish-bg"
              style="resize: none !important"
            ><%= listing.description %></textarea>
          </div>
          
          <div class="row">
            <!-- for md or above md 4:8 ratio -->
            <div class="mb-4 col-md-4">
              <label for="price" class="form-label">Price</label>
              <input
                type="number"
                name="price"
                value="<%= listing.price %>"
                class="form-control custom-greenish-bg"
              />
            </div>
            
            <div class="mb-4 col-md-8
            ">
              <label for="location" class="form-label">Location</label>
              <input
                type="text"
                name="location"
                value="<%= listing.location %>"
                class="form-control custom-greenish-bg"
              />
            </div>
          </div>
          <div class="mb-4">
            <label for="country" class="form-label">Country</label>
            <input
              type="text"
              name="country"
              value="<%= listing.country %>"
              class="form-control custom-greenish-bg"
            />
          </div>
          <button
            type="submit"
            class="btn btn-dark green-btn"
          >
            Edit
          </button>
        </form>
      </div>
    </div>
  </body>

