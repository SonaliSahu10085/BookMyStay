<%- layout('/layouts/boilerplate') -%>
<body>
<div class="row">
  <div class="col-4 offset-4 p-2" style="margin-bottom: 3rem;">
    <h3 class="text-center">Listing Details</h3>
    <div class="card h-100 p-3">
      <img
        src="<%= listing.image %>"
        class="card-img-top rounded-4 show-img"
        alt="<%= listing.title %>"
      />
      <div class="card-body p-0">
        <p class="card-text pt-2">
          <b> <%= listing.title %> </b> <br />
          <span class="fw-medium"
            >&#8377;<%=listing.price.toLocaleString('en-IN') %>/night</span
          >
          <br />
          <%= listing.description %>
          <br />
          <%= listing.location %>
          <br />
          <%= listing.country %>
        </p>
      </div>
      <div class="row">
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
          <a href="/listings/<%= listing._id %>/edits" class="btn btn-dark green-btn">Edit</a>
          <button type="submit" class="btn btn-danger mx-2">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
</body>
